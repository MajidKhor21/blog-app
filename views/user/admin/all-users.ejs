<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>ویرایش کاربران</title>
    <%- include('../../partials/dashboard/scripts-header') %>
    <link rel="stylesheet" href="/stylesheets/dashboard/article.css" />
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include('../../partials/dashboard/navbar') %> <%-
      include('../../partials/dashboard/sidebar') %>

      <div class="content-wrapper mb-5">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-4">
                <% let { search, page, order } = req.query %>
                <h3 class="d-inline-block ml-2">ویرایش کاربران</h3>
              </div>
              <div class="col-sm-4">
                <form
                  class="input-group col-6 m-auto"
                  style="direction: rtl"
                  action="/user/all"
                  method="GET"
                >
                  <input
                    type="search"
                    class="form-control rounded"
                    placeholder="جستجو در کاربران..."
                    aria-label="Search"
                    aria-describedby="search-addon"
                    name="search"
                  />
                </form>
              </div>
              <div class="col-sm-4">
                <ol class="breadcrumb float-sm-left">
                  <li class="breadcrumb-item">
                    <a href="/user/dashboard">داشبورد</a>
                  </li>
                  <li class="breadcrumb-item active">ویرایش کاربران</li>
                </ol>
              </div>
            </div>
          </div>
        </section>
        
        <section class="content mt-2">

          <div class="container">
            
            <table class="table">
              <thead
                style="
                  background-color: #343a40;
                  color: #C2C7D0;
                "
              >
                <tr>
                  <th class="d-none" scope="col"></th>
                  <% if(order === 'desc') { %>
                    <th scope="col"><a  href="/user/all?search=<%= search %>&page=<%= page %>&order=asc" style="color: inherit"><i class="fas fa-sort"> #</i></a></th>
                 <% } %>
                 <% if(order === 'asc') { %>
                  <th scope="col"><a href="/user/all?search=<%= search %>&page=<%= page %>&order=desc" style="color: inherit"><i class="fas fa-sort"> #</i></a></th>
                <% } %>
                  <th scope="col">نام</th>
                  <th scope="col">نام خانوادگی</th>
                  <th scope="col">عکس آواتار</th>
                  <th scope="col">نام کاربری</th>
                  <th scope="col">جنسیت</th>
                  <th scope="col">شماره موبایل</th>
                  <th scope="col">تاریخ عضویت</th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                <% for( let index = 0; index < users.length; index++ ) { %>
                <tr class="text-right">
                  <th class="d-none"><%= users[index]._id %></th>
                  <th scope="row"><%= index+1 %></th>
                  <td>
                    <%= users[index].firstName %>
                  </td>
                  <td><%= users[index].lastName %></td>
                  <td>
                    <% if (users[index].avatar === "default") { %>
                        <img
                            src="/images/avatar.png"
                            alt="تصویر کاربر"
                            width="60px"
                            height="40px"
                          />
                        <%} else { %>
                            <img
                                src="/images/avatars/<%= users[index].avatar %>"
                                alt="تصویر کاربر"
                                width="60px"
                                height="40px"
                              />
                        <% } %>
                  </td>
                  
                  <td><%= users[index].username %> </td>
                  <% if (users[index].gender === "male") { %>
                    <td>مرد</td>
                    <%} else { %>
                        <td>زن</td>
                    <% } %>
                    <td><%= users[index].mobileNumber %> </td>
                  <td><%= createTime[index].time %> - <%= createTime[index].date %> </td>
                  <td>
                    <div>
                      <a
                        class="text-warning updateBtn"
                        href="/user/all/update/<%= users[index]._id %> "
                        ><i class="fas fa-redo ml-4" style="font-size: 20px"></i
                      ></a>
                      <a
                        class="text-danger"
                        href="/user/all/delete/<%= users[index]._id %> "
                      >
                        <i class="far fa-trash-alt" style="font-size: 20px"></i></i
                      ></a>
                    </div>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </section>
      </div>
      <nav aria-label="Page navigation example d-flex">
        <% if (pages > 0) { %>
        <ul class="pagination text-center justify-content-center">
          <% if (current == 1) { %>
          <li class="page-item disabled">
            <a class="page-link">اولین</a>
          </li>
          <% } else { %>
          <li>
            <a class="page-link" href="/user/all?search=<%= search %>&page=1&order=<%= order %>">اولین</a>
          </li>
          <% } %> <% let i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1) { %>
          <li class="page-item disabled"><a class="page-link">...</a></li>
          <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
          <% if (i == current) { %>
          <li class="page-item active">
            <a class="page-link"><%= i %></a>
          </li>
          <% } else { %>
          <li>
            <a class="page-link" href="/user/all?search=<%= search %>&page=<%= i %>&order=<%= order %>"
              ><%= i %></a
            >
          </li>
          <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
          <li class="page-item disabled"><a class="page-link">...</a></li>
          <% } %> <% } %> <% if (current == pages) { %>
          <li class="page-item disabled">
            <a class="page-link">آخرین</a>
          </li>
          <% } else { %>
          <li>
            <a class="page-link" href="/user/all?search=<%= search %>&page=<%= pages %>&order=<%= order %>"
              >آخرین</a
            >
          </li>
          <% } %>
        </ul>
        <% } %>
      </nav>
      <%- include('../../partials/dashboard/footer') %>

      <aside
        class="control-sidebar control-sidebar-dark control-sidebar-animate"
      ></aside>
    </div>
    <%- include('../../partials/dashboard/scripts-footer') %>
    <script src="/javascripts/dashboard/article/updateArticle.js"></script>
    <script>
      $("#alertSuccess")
        .fadeTo(2000, 500)
        .slideUp(500, function () {
          $("#alertSuccess").slideUp(500);
        });
    </script>
  </body>
</html>
