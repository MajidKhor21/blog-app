<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>ویرایش کاربران</title>
    <%- include('../../partials/dashboard/scripts-header') %>
    <link rel="stylesheet" href="/stylesheets/dashboard/article.css" />
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include('../../partials/dashboard/navbar') %> <%-
      include('../../partials/dashboard/sidebar') %>

      <div class="content-wrapper mb-5">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-4">
                <% let { search, page, order } = req.query %>
                <h3 class="d-inline-block ml-2">ویرایش کاربران</h3>
                <% if (users.length) { %>
                  <span class="d-inline-block ml-1">صفحه</span>
                  <% } %> <% if (page) { %>
                  <span class="d-inline-block" id="articleSpan"><%= page %></span>
                  <%} else if(!page && users.length) { %>
                  <span class="d-inline-block" id="articleSpan">1</span>
                  <% } %>
              </div>
              <div class="col-12 col-sm-8 col-md-8 col-lg-4 mb-2">
                <form
                  class="input-group col-12 col-xl-8 m-auto"
                  style="direction: rtl"
                  action="/user/manage/members"
                  method="GET" 
                >
                  <input
                    type="text"
                    class="form-control rounded"
                    placeholder="جستجو در کاربران..."
                    aria-label="Search"
                    aria-describedby="search-addon"
                    name="search" id="searchBar"
                  />
                </form>
              </div>
              <div class="col-sm-4">
                <ol class="breadcrumb float-sm-left">
                  <li class="breadcrumb-item">
                    <a href="/user/dashboard">داشبورد</a>
                  </li>
                  <li class="breadcrumb-item active">ویرایش کاربران</li>
                </ol>
              </div>
            </div>
          </div>
        </section>
        
        <section class="content mt-2">
          <% if (invalid) { %>
            <div
              class="alert alert-danger alert-dismissible fade show w-50 text-right mx-auto"
              role="alert"
            >
              <button
                type="button"
                class="close"
                data-dismiss="alert"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
              <%= invalid %>
            </div>
            <% } %>
            <% if (error) { %>
              <div
                class="alert alert-danger alert-dismissible fade show w-50 text-right mx-auto"
                role="alert"
              >
                <button
                  type="button"
                  class="close"
                  data-dismiss="alert"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
                <%= error %>
              </div>
              <% } %>
              <% if (resetPassword) { %>
                <div
                  class="alert alert-success alert-dismissible fade show w-50 text-right mx-auto"
                  role="alert"
                >
                  <button
                    type="button"
                    class="close"
                    data-dismiss="alert"
                    aria-label="Close"
                  >
                    <span aria-hidden="true">&times;</span>
                  </button>
                  <%= resetPassword %>
                </div>
                <% } %>
                <% if (deleted) { %>
                  <div
                    class="alert alert-success alert-dismissible fade show w-50 text-right mx-auto"
                    role="alert"
                  >
                    <button
                      type="button"
                      class="close"
                      data-dismiss="alert"
                      aria-label="Close"
                    >
                      <span aria-hidden="true">&times;</span>
                    </button>
                    <%= deleted %>
                  </div>
                  <% } %>
          <div class="container-fluid">
            
            <table class="table table-hover table-fixed w-75 mx-auto">
              <thead
                style="
                  background-color: #343a40;
                  color: #C2C7D0;
                "
              >
                <tr>
                  <th class="d-none" scope="col"></th>
                  <% if(order === 'desc') { %>
                    <th scope="col"><a  href="/user/manage/members?search=<%= search %>&page=<%= page %>&order=asc" style="color: inherit"><i class="fas fa-sort"> #</i></a></th>
                 <% } %>
                 <% if(order === 'asc') { %>
                  <th scope="col"><a href="/user/manage/members?search=<%= search %>&page=<%= page %>&order=desc" style="color: inherit"><i class="fas fa-sort"> #</i></a></th>
                <% } %>
                  <th scope="col">نام</th>
                  <th scope="col">نام خانوادگی</th>
                  <th scope="col">عکس آواتار</th>
                  <th class="text-center" scope="col">آدرس ایمیل</th>
                  <th scope="col">نام کاربری</th>
                  <th scope="col">تعداد مقالات</th>
                  <th scope="col">جنسیت</th>
                  <th scope="col">شماره موبایل</th>
                  <th scope="col">تاریخ عضویت</th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                <% if(users.length == 0) { %>
                  <tr class="text-right">
                   <td> کاربری وجود ندارد.</td>
                  </tr>
               <% } %>
                <% for( let index = 0; index < users.length; index++ ) { %>
                  <tr class="text-right">
                    <th class="d-none"><%= users[index]._id %></th>
                    <th scope="row"><%= index+1 %></th>
                    <td>
                      <%= users[index].firstName %>
                    </td>
                    <td><%= users[index].lastName %></td>
                    <td>
                      <% if (users[index].avatar === "default") { %>
                          <img
                              src="/images/avatar.png"
                              alt="تصویر کاربر"
                              style="
                              width: 40px !important;
                              height: 40px !important;
                              border-radius: 50% !important;
                            "
                            />
                          <%} else { %>
                              <img
                                  src="/images/avatars/<%= users[index].avatar %>"
                                  alt="تصویر کاربر"
                                  style="
                                  width: 40px !important;
                                  height: 40px !important;
                                  border-radius: 50% !important;
                                "
                                />
                          <% } %>
                    </td>
                    <td><%= users[index].email %></td>
                    <td><%= users[index].username %></td>
                    <td><%= users[index].articleCounter %></td>
                    <% if (users[index].gender === "male") { %>
                      <td>مرد</td>
                      <%} else { %>
                          <td>زن</td>
                      <% } %>
                      <td><%= users[index].mobileNumber %> </td>
                    <td><%= createTime[index].time %> - <%= createTime[index].date %> </td>
                    <td>
                      <div>
                        <a
                          class="text-info updateBtn"
                          href="/user/manage/members/reset/<%= users[index]._id %>"
                          ><i class="fas fa-redo ml-2" style="font-size: 18px"></i
                        ></a>
                        <a
                          class="text-danger"
                          href="/user/manage/members/delete/<%= users[index]._id %>"
                        >
                          <i class="far fa-trash-alt" style="font-size: 20px"></i></i
                        ></a>
                      </div>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </section>
      </div>
      <nav aria-label="Page navigation example d-flex">
        <% if (pages > 0) { %>
        <ul class="pagination text-center justify-content-center">
          <% if (current == 1) { %>
          <li class="page-item disabled">
            <a class="page-link">اولین</a>
          </li>
          <% } else { %>
          <li>
            <a class="page-link" href="/user/manage/members?search=<%= search %>&page=1&order=<%= order %>">اولین</a>
          </li>
          <% } %> <% let i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1) { %>
          <li class="page-item disabled"><a class="page-link">...</a></li>
          <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
          <% if (i == current) { %>
          <li class="page-item active">
            <a class="page-link"><%= i %></a>
          </li>
          <% } else { %>
          <li>
            <a class="page-link" href="/user/manage/members?search=<%= search %>&page=<%= i %>&order=<%= order %>"
              ><%= i %></a
            >
          </li>
          <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
          <li class="page-item disabled"><a class="page-link">...</a></li>
          <% } %> <% } %> <% if (current == pages) { %>
          <li class="page-item disabled">
            <a class="page-link">آخرین</a>
          </li>
          <% } else { %>
          <li>
            <a class="page-link" href="/user/manage/members?search=<%= search %>&page=<%= pages %>&order=<%= order %>"
              >آخرین</a
            >
          </li>
          <% } %>
        </ul>
        <% } %>
      </nav>
      <%- include('../../partials/dashboard/footer') %>

      <aside
        class="control-sidebar control-sidebar-dark control-sidebar-animate"
      ></aside>
    </div>
    <%- include('../../partials/dashboard/scripts-footer') %>
    <script src="/javascripts/dashboard/article/updateArticle.js"></script>
    <script>
      $(".alert")
        .fadeTo(4000, 500)
        .slideUp(500, function () {
          $(".alert").slideUp(500);
        });
    </script>
  </body>
</html>
