<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>مشخصات من</title>
    <%- include('../partials/dashboard/scripts-header') %>
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include('../partials/dashboard/navbar') %> <%-
      include('../partials/dashboard/sidebar') %>

      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h3>مشخصات من</h3>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                  <li class="breadcrumb-item">
                    <a href="/user/dashboard">داشبورد</a>
                  </li>
                  <li class="breadcrumb-item active">مشخصات من</li>
                </ol>
              </div>
            </div>
          </div>
        </section>

        <section class="content">
          <div class="text-center w-50 m-auto">
            <table class="table table-striped table-bordered mt-5">
              <tbody>
                <tr>
                  <td class="font-weight-bold">نام</td>
                  <td><%= user.firstName %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">نام خانوادگی</td>
                  <td><%= user.lastName %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">آدرس ایمیل</td>
                  <td><%= user.email %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">نام کاربری</td>
                  <td><%= user.username %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">جنسیت</td>
                  <% if (user.gender === 'male') { %>
                  <td>مرد</td>
                  <%} else { %>
                  <td>زن</td>
                  <% } %>
                </tr>
                <tr>
                  <td class="font-weight-bold">شماره موبایل</td>
                  <td><%= user.mobileNumber %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">نقش</td>
                  <% if (user.role === 'admin') { %>
                  <td>مدیر</td>
                  <%} else { %>
                  <td>نویسنده</td>
                  <% } %>
                </tr>
              </tbody>
            </table>
          </div>
        </section>
      </div>

      <%- include('../partials/dashboard/footer') %>

      <aside
        class="control-sidebar control-sidebar-dark control-sidebar-animate"
      ></aside>
    </div>

    <%- include('../partials/dashboard/scripts-footer') %>
  </body>
</html>
