<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title><%= article.title %></title>
    <%- include('../partials/dashboard/scripts-header') %>
    <script src="/ckeditor/ckeditor.js"></script>
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include('../partials/dashboard/navbar') %> <%-
      include('../partials/dashboard/sidebar') %>

      <div class="content-wrapper mb-5">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6"></div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                  <li class="breadcrumb-item">
                    <a href="/user/dashboard">داشبورد</a>
                  </li>
                  <li class="breadcrumb-item active"><%= article.title %></li>
                </ol>
              </div>
            </div>
          </div>
        </section>

        <section class="content m-auto text-center">
          <div class="container">
            <div class="row">
              <div class="col-lg-12">
                <h1 class="mt-4"><%= article.title %></h1>

                <p class="lead">
                  نویسنده:
                  <a href="#"
                    ><%= article.author.firstName %> <%= article.author.lastName
                    %>
                  </a>
                  <% if (user.avatar === "default") { %>
                  <img
                    src="/images/avatar.png"
                    alt="تصویر پروفایل نویسنده"
                    style="
                      width: 30px !important;
                      border-radius: 50% !important;
                    "
                  />
                  <%} else { %>
                  <img
                    src="/images/avatars/<%= article.author.avatar %> "
                    alt="تصویر پروفایل نویسنده"
                    style="
                      width: 30px !important;
                      border-radius: 50% !important;
                    "
                  />
                  <% } %>
                </p>

                <hr />
                <div class="d-flex justify-content-between">
                  <div class="my-auto">
                    <h5 class="float-right"><%= article.brief %></h5>
                    <br />

                    <p class="float-right text-muted">
                      ارسال شده در تاریخ: <%= createTime.date %> ساعت : <%=
                      createTime.time %>
                    </p>
                    <br />
                    <p class="float-right text-muted font-weight-lighter">
                      تعداد بازدید: <%= art.viewCounter %>
                    </p>
                  </div>

                  <div class="">
                    <img
                      class="img-fluid rounded"
                      src="/images/articles/<%= article.picture %>"
                      alt="تصویر پست مقاله"
                      style="width: 180px !important; height: 100px !important"
                    />
                  </div>
                </div>

                <hr />

                <div class="mx-auto d-none" id="describe">
                  <%= article.describe %>
                </div>
                <div id="desc"></div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <%- include('../partials/dashboard/footer') %>

      <aside
        class="control-sidebar control-sidebar-dark control-sidebar-animate"
      ></aside>
    </div>
    <%- include('../partials/dashboard/scripts-footer') %>
    <script src="/javascripts/dashboard/article/singleArticle.js"></script>
  </body>
</html>
