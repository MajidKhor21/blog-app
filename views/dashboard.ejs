<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <% if(user.role === 'admin') { %>
    <title>پنل مدیریت</title>
    <% } else { %>
    <title>پنل کاربری</title>
    <% } %> <%- include('partials/dashboard/scripts-header') %>
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include('partials/dashboard/navbar') %> <%-
      include('partials/dashboard/sidebar') %>
      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-12 col-sm-4 col-md-4 col-lg-4">
                <% let { search, page, order } = req.query %>
                <h3 class="d-inline-block ml-2">مقالات</h3>
                <% if (articles.length) { %>
                <span class="d-inline-block ml-1">صفحه</span>
                <% } %> <% if (page) { %>
                <span class="d-inline-block" id="articleSpan"><%= page %></span>
                <%} else if(!page && articles.length) { %>
                <span class="d-inline-block" id="articleSpan">1</span>
                <% } %>
              </div>
              <div class="col-12 col-sm-8 col-md-8 col-lg-4 mb-2">
                <form
                  class="input-group col-12 col-xl-8 m-auto"
                  style="direction: rtl"
                  action="/user/dashboard"
                  method="GET"
                >
                  <input
                    type="text"
                    class="form-control rounded"
                    placeholder="جستجو در مقالات..."
                    aria-label="Search"
                    aria-describedby="search-addon"
                    name="search"
                    id="searchBar"
                  />
                </form>
              </div>
              <div class="d-none d-lg-block col-lg-4">
                <ol class="breadcrumb float-sm-left">
                  <li class="breadcrumb-item"><a href="#">خانه</a></li>
                  <li class="breadcrumb-item active">داشبورد</li>
                </ol>
              </div>
            </div>
          </div>
        </section>

        <section class="content">
          <div class="container">
            <% if (successfullyAdded) { %>
            <div
              class="alert alert-success alert-dismissible fade show w-75 text-right mx-auto"
              role="alert"
            >
              <button
                type="button"
                class="close"
                data-dismiss="alert"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
              <%= successfullyAdded %>
            </div>
            <% } %> <% if (remove) { %>
            <div
              class="alert alert-success alert-dismissible fade show w-75 text-right mx-auto"
              role="alert"
            >
              <button
                type="button"
                class="close"
                data-dismiss="alert"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
              <%= remove %>
            </div>
            <% } %> <% if (login) { %>
            <div
              class="alert alert-success alert-dismissible fade show w-50 text-right mx-auto"
              role="alert"
            >
              <button
                type="button"
                class="close"
                data-dismiss="alert"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
              <%= login %>
            </div>
            <% } %> <% if (avatar) { %>
            <div
              class="alert alert-success alert-dismissible fade show w-50 text-right mx-auto"
              role="alert"
            >
              <button
                type="button"
                class="close"
                data-dismiss="alert"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
              <%= avatar %>
            </div>
            <% } %> <% if(articles.length > 0) { %> <% if (order === 'desc') {
            %>
            <select
              class="form-control col-11 col-sm-6 col-lg-4 w-100 mb-4"
              onChange="window.location.href=this.value"
            >
              <option
                value="/user/dashboard?search=<%= search %>&page=<%= page %>&order=desc"
                selected
              >
                مرتب سازی: از آخرین به اولین
              </option>
              <option
                value="/user/dashboard?search=<%= search %>&page=<%= page %>&order=asc"
              >
                مرتب سازی: از اولین به آخرین
              </option>
            </select>
            <%} else if(order === 'asc') { %>
            <select
              class="form-control col-11 col-sm-6 col-lg-4 w-100 mb-4"
              onChange="window.location.href=this.value"
            >
              <option
                value="/user/dashboard?search=<%= search %>&page=<%= page %>&order=desc"
              >
                مرتب سازی: از آخرین به اولین
              </option>
              <option
                value="/user/dashboard?search=<%= search %>&page=<%= page %>&order=asc"
                selected
              >
                مرتب سازی: از اولین به آخرین
              </option>
            </select>
            <% } %> <% } %>

            <div class="card-deck">
              <% for( let index = 0; index < articles.length; index++ ) { %>
              <div class="col-12 col-md-6 col-lg-4">
                <div class="card position-relative">
                  <% if (index === 0 && (new
                  Date(articles[index].createdAt).getTime() >= Date.now() -
                  172800000) && order === 'desc') { %>
                  <span
                    class="badge badge-danger rounded w-25 position-absolute"
                    style="top: -10px !important"
                    >جدیدترین</span
                  >
                  <%} else if ((new Date(articles[index].createdAt).getTime() >=
                  Date.now() - 172800000) ) { %>
                  <span
                    class="badge badge-danger rounded w-25 position-absolute"
                    style="top: -10px !important"
                    >جدید</span
                  >
                  <% } %>
                  <a href="/article/view/<%= articles[index]._id %>">
                    <img
                      class="card-img-top"
                      src="/images/articles/<%= articles[index].picture %>"
                      alt="Card image cap"
                      width="362px"
                      height="180px"
                  /></a>
                  <div class="card-body">
                    <div class="mb-3 text-center">
                      <small class="text-muted">
                        <i class="fas fa-user ml-1"></i> <%=
                        articles[index].author.firstName %> <%=
                        articles[index].author.lastName %></small
                      >
                      <div>
                        <small
                          ><i class="fas fa-eye text-muted"></i
                          ><span class="mr-1 ml-2 text-muted"
                            ><%= articles[index].viewCounter %>
                          </span></small
                        >
                        <small
                          ><i class="fas fa-comment-dots text-muted"></i
                          ><span class="mr-1"
                            ><%= articles[index].commentCounter %></span
                          ></small
                        >
                      </div>
                    </div>

                    <h3 class="card-title font-weight-bold">
                      <%= articles[index].title %>
                    </h3>
                    <br />
                    <p class="card-text"><%= articles[index].brief %></p>
                  </div>
                  <div class="card-footer">
                    <% if (new Date(articles[index].createdAt).getTime() >=
                    Date.now() - 300000) { %>
                    <small class="text-muted float-left">لحظاتی پیش</small>
                    <%} else { %>
                    <small class="text-muted float-left"
                      ><%= createTime[index].time %> - <%=
                      createTime[index].date %></small
                    >
                    <% } %>

                    <small class="float-right"
                      ><a href="/article/view/<%= articles[index]._id %>"
                        >بیشتر بخوانید...</a
                      ></small
                    >
                  </div>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </section>
      </div>

      <nav aria-label="Page navigation example d-flex">
        <% if (pages > 0) { %>
        <ul class="pagination justify-content-center">
          <% if (current == 1) { %>
          <li class="page-item disabled">
            <a class="page-link">اولین</a>
          </li>
          <% } else { %>
          <li>
            <a
              class="page-link"
              href="/user/dashboard?search=<%= search %>&page=1&order=<%= order %>"
              >اولین</a
            >
          </li>
          <% } %> <% let i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1) { %>
          <li class="page-item disabled"><a class="page-link">...</a></li>
          <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
          <% if (i == current) { %>
          <li class="page-item active">
            <a class="page-link"><%= i %></a>
          </li>
          <% } else { %>
          <li>
            <a
              class="page-link"
              href="/user/dashboard?search=<%= search %>&page=<%= i %>&order=<%= order %>"
              ><%= i %></a
            >
          </li>
          <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
          <li class="page-item disabled"><a class="page-link">...</a></li>
          <% } %> <% } %> <% if (current == pages) { %>
          <li class="page-item disabled">
            <a class="page-link">آخرین</a>
          </li>
          <% } else { %>
          <li>
            <a
              class="page-link"
              href="/user/dashboard?search=<%= search %>&page=<%= pages %>&order=<%= order %>"
              >آخرین</a
            >
          </li>
          <% } %>
        </ul>
        <% } %>
      </nav>
      <%- include('partials/dashboard/footer') %>

      <aside
        class="control-sidebar control-sidebar-dark control-sidebar-animate"
      ></aside>
    </div>

    <%- include('partials/dashboard/scripts-footer') %>
    <script src="/javascripts/dashboard/main.js"></script>
  </body>
</html>
