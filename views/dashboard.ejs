<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>پنل کاربری</title>
    <%- include('partials/dashboard/scripts-header') %>
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include('partials/dashboard/navbar') %> <%-
      include('partials/dashboard/sidebar') %>

      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h3 class="d-inline-block ml-2">مقالات</h3>
                <% if (articles.length) { %>
                <span class="d-inline-block ml-1">صفحه</span>
                <% } %> <% if (page) { %>
                <span class="d-inline-block" id="articleSpan"
                  ><%= page %>
                </span>
                <%} else if(!page && articles.length) { %>
                <span class="d-inline-block" id="articleSpan">1</span>
                <% } %>
              </div>

              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                  <li class="breadcrumb-item"><a href="#">خانه</a></li>
                  <li class="breadcrumb-item active">داشبورد</li>
                </ol>
              </div>
            </div>
          </div>
          <% if (msg === "successfully") { %>
          <div class="alert alert-success w-25" role="alert" id="alertSuccess">
            با موفقیت اضافه شد.
          </div>
          <% } %> <% if (msg === "successfully deleted") { %>
          <div class="alert alert-success w-25" role="alert" id="alertSuccess">
            با موفقیت حذف شد.
          </div>
          <% } %>
        </section>

        <section class="content">
          <div class="container">
            <div class="card-deck">
              <% for( let index = 0; index < articles.length; index++ ) { %>
              <div class="col-10 col-md-6 col-lg-4">
                <div class="card position-relative">
                  <% if (index === 0 && (new
                  Date(articles[index].createdAt).getTime() >= Date.now() -
                  172800000)) { %>
                  <span
                    class="badge badge-danger rounded w-25 position-absolute"
                    style="top: -10px !important"
                    >جدیدترین</span
                  >
                  <%} else if ((new Date(articles[index].createdAt).getTime() >=
                  Date.now() - 172800000) ) { %>
                  <span
                    class="badge badge-danger rounded w-25 position-absolute"
                    style="top: -10px !important"
                    >جدید</span
                  >
                  <% } %>
                  <a href="/article/view/<%= articles[index]._id %>">
                    <img
                      class="card-img-top"
                      src="/images/articles/<%= articles[index].picture %>"
                      alt="Card image cap"
                      width="362px"
                      height="180px"
                  /></a>
                  <div class="card-body">
                    <div class="mb-3 text-center">
                      <small class="text-muted">
                        <i class="fas fa-user ml-1"></i> <%=
                        articles[index].author.firstName %> <%=
                        articles[index].author.lastName %></small
                      >
                      <div>
                        <small
                          ><i class="fas fa-eye text-muted"></i
                          ><span class="mr-1 ml-2 text-muted"
                            ><%= articles[index].viewCounter %>
                          </span></small
                        >
                        <small
                          ><i class="fas fa-comment-dots text-muted"></i
                          ><span class="mr-1">0</span></small
                        >
                      </div>
                    </div>

                    <h3 class="card-title font-weight-bold">
                      <%= articles[index].title %>
                    </h3>
                    <br />
                    <p class="card-text"><%= articles[index].brief %></p>
                  </div>
                  <div class="card-footer">
                    <% if (new Date(articles[index].createdAt).getTime() >=
                    Date.now() - 300000) { %>
                    <small class="text-muted float-left">لحظاتی پیش</small>
                    <%} else { %>
                    <small class="text-muted float-left"
                      ><%= createTime[index].time %> - <%=
                      createTime[index].date %></small
                    >
                    <% } %>

                    <small class="float-right"
                      ><a href="/article/view/<%= articles[index]._id %>"
                        >بیشتر بخوانید...</a
                      ></small
                    >
                  </div>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </section>
      </div>

      <nav aria-label="Page navigation example d-flex">
        <% if (pages > 0) { %>
        <ul class="pagination text-center justify-content-center">
          <% if (current == 1) { %>
          <li class="page-item disabled">
            <a class="page-link">اولین</a>
          </li>
          <% } else { %>
          <li>
            <a class="page-link" href="/user/dashboard?page=1">اولین</a>
          </li>
          <% } %> <% let i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1) { %>
          <li class="page-item disabled"><a class="page-link">...</a></li>
          <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
          <% if (i == current) { %>
          <li class="page-item active">
            <a class="page-link"><%= i %></a>
          </li>
          <% } else { %>
          <li>
            <a class="page-link" href="/user/dashboard?page=<%= i %>"
              ><%= i %></a
            >
          </li>
          <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
          <li class="page-item disabled"><a class="page-link">...</a></li>
          <% } %> <% } %> <% if (current == pages) { %>
          <li class="page-item disabled">
            <a class="page-link">آخرین</a>
          </li>
          <% } else { %>
          <li>
            <a class="page-link" href="/user/dashboard?page=<%= pages %>"
              >آخرین</a
            >
          </li>
          <% } %>
        </ul>
        <% } %>
      </nav>
      <%- include('partials/dashboard/footer') %>

      <aside
        class="control-sidebar control-sidebar-dark control-sidebar-animate"
      ></aside>
    </div>

    <%- include('partials/dashboard/scripts-footer') %>
    <script src="/javascripts/dashboard/main.js"></script>
  </body>
</html>
