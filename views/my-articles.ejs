<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>مقالات من</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/dashboard/adminlte.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/dashboard/custom.css" />
    <link rel="stylesheet" href="/stylesheets/dashboard/article.css" />
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include('partials/dashboard-navbar') %> <%-
      include('partials/sidebar') %>

      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h3>مقالات من</h3>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                  <li class="breadcrumb-item">
                    <a href="/user/dashboard">داشبورد</a>
                  </li>
                  <li class="breadcrumb-item active">مقالات من</li>
                </ol>
              </div>
            </div>
          </div>
        </section>

        <section class="content mt-5">
          <div class="card-deck">
            <% for( let index = 0; index < articles.length; index++ ) { %>
            <div class="col-12 col-sm-6 col-lg-4">
              <div
                class="card"
                style="
                  background: linear-gradient(rgb(0 0 0 / 55%), rgb(0 0 0 / 0%)),
                    url('/images/articles/<%= articles[index].picture %>');
                "
              >
                <div class="card-time">
                  <%= createTime[index].time %> - <%= createTime[index].date %>
                </div>
                <div class="card-description">
                  <h2><%= articles[index].title %></h2>
                  <p><%= articles[index].brief %></p>
                </div>
                <img
                  class="card-user avatar avatar-large"
                  src="/images/avatars/<%= user.avatar %>"
                />
                <a
                  class="card-link"
                  href="/user/article/view/<%= articles[index]._id %>"
                ></a>
              </div>
            </div>
            <% } %>
          </div>
          <p id="allArticle" class="d-none"><%= arts %></p>
          <p id="myUsername" class="d-none"><%= user.username %></p>
        </section>
      </div>
      <nav aria-label="Page navigation example d-flex">
        <ul class="pagination justify-content-center mb-5" id="pagination"></ul>
      </nav>
      <%- include('partials/dashboard-footer') %>

      <aside
        class="control-sidebar control-sidebar-dark control-sidebar-animate"
      ></aside>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <script src="/javascripts/dashboard/adminlte.js"></script>
    <script src="/javascripts/dashboard/demo.js"></script>
    <script src="/javascripts/dashboard/moment.min.js"></script>
    <script src="/javascripts/dashboard/moment-jalaali.js"></script>
    <script src="/javascripts/dashboard/date.js"></script>
    <script src="/javascripts/dashboard/myArticle.js"></script>
  </body>
</html>
