<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>مشخصات من</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <!-- Ionicons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ionicons/5.5.0/esm/ionicons.min.js"></script>
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="/stylesheets/adminlte.css" />
    <!-- Google Font: Source Sans Pro -->
    <link
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700"
      rel="stylesheet"
    />
    <!-- Bootstrap 4 RTL
    <link
      rel="stylesheet"
      href="https://cdn.rtlcss.com/bootstrap/v4.2.1/css/bootstrap.min.css"
    /> -->
    <!-- Custom style for RTL -->
    <link rel="stylesheet" href="/stylesheets/custom.css" />
  </head>
  <body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
      <!-- Navbar -->
      <%- include('partials/dashboard-navbar') %>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <%- include('partials/sidebar') %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>مشخصات من</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                  <li class="breadcrumb-item">
                    <a href="/user/dashboard">داشبورد</a>
                  </li>
                  <li class="breadcrumb-item active">مشخصات من</li>
                </ol>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="text-center w-50 m-auto">
            <table class="table table-striped table-bordered mt-5">
              <tbody>
                <tr>
                  <td class="font-weight-bold">نام</td>
                  <td><%= user.firstName %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">نام خانوادگی</td>
                  <td><%= user.lastName %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">نام کاربری</td>
                  <td><%= user.username %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">جنسیت</td>
                  <% if (user.gender === 'male') { %>
                  <td>مرد</td>
                  <%} else { %>
                  <td>زن</td>
                  <% } %>
                </tr>
                <tr>
                  <td class="font-weight-bold">شماره موبایل</td>
                  <td><%= user.mobileNumber %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">نقش</td>
                  <% if (user.role === 'admin') { %>
                  <td>مدیر</td>
                  <%} else { %>
                  <td>نویسنده</td>
                  <% } %>
                </tr>
              </tbody>
            </table>
          </div>
        </section>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->

      <footer class="main-footer">
        <!-- <div class="float-right d-none d-sm-block">
