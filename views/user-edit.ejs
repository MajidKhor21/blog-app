<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>ویرایش مشخصات</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ionicons/5.5.0/esm/ionicons.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/dashboard/adminlte.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/dashboard/custom.css" />
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <%- include('partials/dashboard-navbar') %> <%-
      include('partials/sidebar') %>

      <div class="content-wrapper">
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>ویرایش مشخصات</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                  <li class="breadcrumb-item">
                    <a href="/user/dashboard">داشبورد</a>
                  </li>
                  <li class="breadcrumb-item active">ویرایش مشخصات</li>
                </ol>
              </div>
            </div>
          </div>
        </section>

        <section class="content">
          <div class="text-center w-50 m-auto">
            <div class="mt-5">
              <div
                class="alert alert-danger w-75 mx-auto d-none mb-5"
                role="alert"
                id="msgAlert"
              >
                خطا
              </div>
              <div
                class="alert alert-success w-75 mx-auto d-none mb-5"
                role="alert"
                id="msgAlert2"
              >
                با موفقیت ویرایش شد
              </div>
              <div class="form-group row">
                <label for="firstName" class="col-sm-2 col-form-label"
                  >نام</label
                >
                <div class="col-sm-10">
                  <input
                    type="text"
                    class="form-control plc"
                    id="firstName"
                    value="<%= user.firstName %>"
                  />
                </div>
              </div>
              <div class="form-group row">
                <label for="lastName" class="col-sm-2 col-form-label"
                  >نام خانوادگی</label
                >
                <div class="col-sm-10">
                  <input
                    type="text"
                    class="form-control plc"
                    id="lastName"
                    value="<%= user.lastName %>"
                  />
                </div>
              </div>
              <div class="form-group row">
                <label for="username" class="col-sm-2 col-form-label"
                  >نام کاربری</label
                >
                <div class="col-sm-10">
                  <input
                    type="text"
                    readonly
                    disabled
                    class="form-control-plaintext"
                    id="username"
                    value="<%= user.username %>"
                  />
                </div>
              </div>

              <div class="form-group row">
                <label for="gender" class="col-sm-2 col-form-label"
                  >جنسیت</label
                >
                <div class="col-sm-10">
                  <% if (user.gender === 'male') { %>
                  <select
                    class="custom-select d-inline-block"
                    id="gender2"
                    name="gender"
                  >
                    <option value="male" selected>مرد</option>
                    <option value="female">زن</option>
                  </select>
                  <%} else { %>
                  <select
                    class="custom-select d-inline-block"
                    id="gender2"
                    name="gender"
                  >
                    <option value="female" selected>زن</option>
                    <option value="male">مرد</option>
                  </select>
                  <% } %>
                </div>
              </div>

              <div class="form-group row">
                <label for="mobileNumber" class="col-sm-2 col-form-label"
                  >شماره موبایل</label
                >
                <div class="col-sm-10">
                  <input
                    type="text"
                    class="form-control plc"
                    id="mobileNumber"
                    value="<%= user.mobileNumber %>"
                  />
                </div>
              </div>

              <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label"
                  >نقش</label
                >
                <div class="col-sm-10">
                  <% if (user.role === 'admin') { %>
                  <input
                    type="text"
                    readonly
                    disabled
                    class="form-control-plaintext"
                    id="inputPassword"
                    value="مدیر"
                  />
                  <%} else { %>
                  <input
                    type="text"
                    readonly
                    disabled
                    class="form-control-plaintext"
                    id="inputPassword"
                    value="نویسنده"
                  />
                  <% } %>
                </div>
              </div>

              <div class="form-group row float-left" style="font-size: 14px">
                <p class="font-weight-bolder">
                  آخرین ویرایش:
                  <span class="font-weight-lighter"
                    ><%= user.lastUpdateTime %> - <%= user.lastUpdateDate
                    %></span
                  >
                </p>
              </div>
              <button type="submit" class="btn btn-primary mt-5" id="editBtn">
                ویرایش
              </button>
            </div>
          </div>
        </section>
      </div>

      <footer class="main-footer"></footer>

      <aside
        class="control-sidebar control-sidebar-dark control-sidebar-animate"
      ></aside>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <script src="/javascripts/dashboard/adminlte.js"></script>
    <script src="/javascripts/dashboard/demo.js"></script>
    <script src="/javascripts/dashboard/moment.min.js"></script>
    <script src="/javascripts/dashboard/moment-jalaali.js"></script>
    <script src="/javascripts/dashboard/date.js"></script>
    <script src="/javascripts/dashboard/updateUser.js"></script>
  </body>
</html>
